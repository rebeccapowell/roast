{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "postgres": {
      "type": "container.v0",
      "connectionString": "Host={postgres.bindings.tcp.host};Port={postgres.bindings.tcp.port};Username=postgres;Password={postgres-password.value}",
      "image": "docker.io/library/postgres:17.6",
      "volumes": [
        {
          "name": "pgdata",
          "target": "/var/lib/postgresql/data",
          "readOnly": false
        }
      ],
      "env": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "--auth-host=scram-sha-256 --auth-local=scram-sha-256",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "{postgres-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5432
        }
      }
    },
    "coffeetalkdb": {
      "type": "value.v0",
      "connectionString": "{postgres.connectionString};Database=coffeetalkdb"
    },
    "pgadmin": {
      "type": "container.v0",
      "image": "dpage/pgadmin4:latest",
      "bindMounts": [
        {
          "source": "pgadmin-servers.json",
          "target": "/pgadmin4/servers.json",
          "readOnly": false
        }
      ],
      "volumes": [
        {
          "name": "pgadmin-data",
          "target": "/var/lib/pgadmin",
          "readOnly": false
        }
      ],
      "env": {
        "PGADMIN_DEFAULT_EMAIL": "admin@example.com",
        "PGADMIN_DEFAULT_PASSWORD": "admin",
        "ConnectionStrings__postgres": "{postgres.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 5050,
          "targetPort": 80
        }
      }
    },
    "coffeetalk-migrator": {
      "type": "project.v0",
      "path": "../CoffeeTalk.Migrations/CoffeeTalk.Migrations.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ConnectionStrings__coffeetalkdb": "{coffeetalkdb.connectionString}"
      }
    },
    "coffeetalk-api": {
      "type": "project.v0",
      "path": "../CoffeeTalk.Api/CoffeeTalk.Api.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{coffeetalk-api.bindings.http.targetPort}",
        "ConnectionStrings__coffeetalkdb": "{coffeetalkdb.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "coffeetalk-web": {
      "type": "executable.v0",
      "workingDirectory": "../CoffeeTalk.Web",
      "command": "npm",
      "args": [
        "run",
        "start"
      ],
      "env": {
        "NODE_ENV": "development",
        "PORT": "{coffeetalk-web.bindings.http.targetPort}",
        "services__coffeetalk-api__http__0": "{coffeetalk-api.bindings.http.url}",
        "services__coffeetalk-api__https__0": "{coffeetalk-api.bindings.https.url}",
        "NEXT_PUBLIC_API_BASE_URL": "{coffeetalk-api.bindings.https.url}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 3000,
          "targetPort": 8000
        }
      }
    },
    "postgres-password": {
      "type": "parameter.v0",
      "value": "{postgres-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22
            }
          }
        }
      }
    }
  }
}